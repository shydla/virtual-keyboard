{
    "semi": false,
    "overrides": [
      {
        "files": "*.js",
        "options": {
          "semi": true,
          "singleQuote": true,
          "trailingComma": "es5"
        }
      },
      {
        "files": ["*.html", "*.js", "*.scss"],
        "options": {
          "tabWidth": 2
        }
      },
      {
        "files": ["*.html", "*.scss"],
        "options": {
          "doubleQuote": true
        }
      }
    ]
  }